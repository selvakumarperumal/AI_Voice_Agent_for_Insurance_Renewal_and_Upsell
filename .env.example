# Application Configuration
DEBUG=false
APP_NAME="Insurance Voice Agent API"
APP_VERSION="1.0.0"

# Database
DATABASE_URL=postgresql://postgres:postgres@db:5432/insurance_db

# Redis
REDIS_URL=redis://redis:6379/0

# JWT / Auth
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production-make-it-long-and-random
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# LiveKit
LIVEKIT_API_KEY=devkey
LIVEKIT_API_SECRET=secret
LIVEKIT_URL=ws://livekit:7880
LIVEKIT_WEBHOOK_SECRET=

# Twilio SIP (for outbound calls)
TWILIO_SIP_DOMAIN=your-sip-domain.pstn.twilio.com
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_SIP_USERNAME=your-sip-username
TWILIO_SIP_PASSWORD=your-sip-password

# AI Services
DEEPGRAM_API_KEY=your-deepgram-api-key
GEMINI_API_KEY=your-gemini-api-key
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_DEFAULT_REGION=us-east-1

# CORS
CORS_ORIGINS=*

# NVIDIA (if using NVIDIA models)
NVIDIA_API_KEY=your-nvidia-api-key
NVIDIA_MODEL_NAME=meta/llama3-70b-instruct
